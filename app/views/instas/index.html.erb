
<header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
        <span class="sr-only">Bootstrap Test</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Bootstrap</a>
    </div>
    <div id="gnavi" class="collapse navbar-collapse">
      <ul class="nav navbar-nav text-uppercase ml-auto">
        <li class ="nav-item">
          <%= link_to 'tweet!!', new_insta_path %></li>
      </ul>
    </div>
  </div>
</nav>
</header>

<div class ="content cleafix">
<section class="main-header">
  <%= image_tag "moji2.png"%>
</section>

<section class="col-md-offset-1 col-md-5 col-md-offset-6 about">
<h2>About App</h2>
  <p class="about">Twitter作成課題のサンプルアプリです</p>
</section>

<div id="new-insta-link">
    <%= link_to 'tweet!!', new_insta_path,class: ' col-md-offset-2 col-md-1  col-md-offset-9 btn btn-info' %>
</div>
  <br>
  <div class="container">
    <% @instas.each do |insta| %>
     <div class="PhotoBox" class="col-sm-6 col-md-3">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="/assets/banner.png" alt="...">
          <div class="caption">
             
        <p><%= insta.content %></p>
        <p><%= image_tag(insta.image_url) if insta.image.present?%></p>
  
  <div class="insta-links">
    <%if insta.user_id == current_user.id %>
      <%= link_to 'Show', insta, class: 'btn btn-success' %>
      <%= link_to 'Edit', edit_insta_path(insta), class: 'btn btn-warning' %>
      <%= link_to 'Destroy', insta, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></p>
    <% else %>
      <%= link_to 'Show', insta, class: 'btn btn-success' %>
    <% end %>
  </div>
  </div>
  </div>
  </div>
  </div>
  <% end %>
</div>
