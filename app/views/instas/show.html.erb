<h2>Tweet</h2>
<div class="input">
<p>ユーザー: <%= @insta.user.name %></p>
<p>内容    : <%= @insta.content %></p>
<p>Image: <%= image_tag @insta.image %></p>

<p id="notice"><%= notice %></p>
<% if @insta.user == current_user %>
<%= link_to 'Edit', edit_insta_path(@insta), class: 'btn btn-warning' %>
<% end %>

<% unless @insta.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除', favorite_path(insta_id: @insta.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(insta_id: @insta.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Back', instas_path, class: 'btn btn-success'  %>