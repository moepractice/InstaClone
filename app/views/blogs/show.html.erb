<h2>Tweet</h2>
<div class="input">
<p>ユーザー: <%= @blog.user.name %></p>
<p>内容    : <%= @blog.content %></p>

<p id="notice"><%= notice %></p>
<% if @blog.user == current_user %>
<%= link_to 'Edit', edit_blog_path(@blog), class: 'btn btn-warning' %>
<% end %>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Back', blogs_path, class: 'btn btn-success'  %>