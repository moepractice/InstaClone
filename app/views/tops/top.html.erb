
<header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
        <span class="sr-only">Moesta</span>
        
        <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
    
     <% if logged_in? %>
        <span class="icon-bar"><%= link_to "Profile", user_path(current_user.id) class: 'btn btn-default' %>Profile</span>
        <span class="icon-bar"><%= link_to "Logout",session_path(current_user.id), method: :delete, class: 'btn btn-default' %>Logout</span>
     <% else %>   
        <span class="icon-bar"><%= link_to "Sign up", new_user_path, class: 'btn btn-default' %>Sign up</span>
        <span class="icon-bar"><%= link_to "Login", new_session_path class: 'btn btn-default' %>Login</span>
     <% end %>
    <%= yield %>
      </button>
      <a class="navbar-brand" href="#">Moesta</a>
    </div>
    <div id="gnavi" class="collapse navbar-collapse">
      <ul class="nav navbar-nav text-uppercase ml-auto">
        <li class ="nav-item">
          <%= link_to 'New Moesta', new_blog_path, class: 'btn btn-default' %></li>
      </ul>
    </div>
  </div>
</nav>
</header>

<div class ="content cleafix">
<section class="main-header">
  <%= image_tag "moji2.png"%>
</section>